include ./btn--outline


mixin card(item, index, mClass)
  .card(class=`${mClass}`)
    img(src=require(`./img/portfolio${index+1}.jpg`), alt='Portfolio item').card-img-top.img-fluid
    .card-body
      h3.card-title.heading-tertiary=item.title
      p.card-text.prime=item.prime
      +btn--outline('Show me more')
